<table border="1">
    <thead>
            <tr>
                <td>No</td>
                <td style="width:200px; text-align:center;">Name</td> 
                <td style="width:150px; text-align:center;">Action</td>
            <tr>
    </thead>
    <tbody>
        <% categories.each_with_index  do |category, index| %>
        <tr>
            <td><%= index+1 %></td>
            <td><%= category.name %> </td> 
            <td style="text-align:center;">
                <a href="/categories/<%= category.id %>/detail" style="float:left; margin-right:10;">show Items</a>
                <a href="/categories/<%= category.id %>/edit" style="float:left;  margin-right:10;">Edit</a>
                <form action="/categories/<%= category.id %>/delete" method="post" style="float:left;  margin-right:10;">
                    <input type="submit" value="delete">
                </form>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

