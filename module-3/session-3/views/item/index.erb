<h1>Item List</h1> 
<br>
<a> items </a> 
| 
<a href="/categories"> categories </a> 
<br>
<br>
<a href="/items/create"> Add New Item </a>
<br>
<br>
<table border="1">
    <thead>
            <tr>
                <td>No</td>
                <td style="width:200px; text-align:center;">Name</td>
                <td style="width:100px; text-align:center;">Price</td>
                <td style="width:100px; text-align:center;">categories</td>
                <td style="width:150px; text-align:center;">Action</td>
            <tr>
    </thead>
    <tbody>
        <% items.each_with_index do |item, index| %>
        <tr>
            <td><%= index+1 %></td>
            <td><%= item.name %> </td>
            <td><%= item.price %> </td>
            <td>
                <% item.categories.each  do |category| %>
                    <a href="#"> <%= category.name %> </a>, 
                <% end %>
            </td>
            <td style="text-align:center;">
                <a href="/items/<%= item.id %>/detail" style="float:left; margin-right:10;">Show</a>
                <a href="/items/<%= item.id %>/edit" style="float:left;  margin-right:10;">Edit</a>
                <form action="/items/<%= item.id %>/delete" method="post" style="float:left;  margin-right:10;">
                    <input type="submit" value="delete">
                </form>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

