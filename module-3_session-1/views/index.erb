
<h1>Item List</h1>
<a href="/items/create/new"> Add New Item </a>
<br>
<br>
<table border="1">
    <thead>
            <tr>
                <td>No</td>
                <td style="width:200px; text-align:center;">Name</td>
                <td style="width:100px; text-align:center;">Price</td>
                <td style="width:150px; text-align:center;">Action</td>
            <tr>
    </thead>
    <tbody>
        <% items.each do |item| %>
        <tr>
            <td>1</td>
            <td><%= item.name %> </td>
            <td><%= item.price %> </td>
            <td style="text-align:center;">
                <a href="/items/<%= item.id %>" style="float:left; margin-right:10;">Show</a>
                <a href="/items/<%= item.id %>/edit" style="float:left;  margin-right:10;">Edit</a>
                <form action="/items/<%= item.id %>/delete" method="post" style="float:left;  margin-right:10;">
                    <input type="submit" value="delete">
                </form>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

